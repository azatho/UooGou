.refund .refund_title .refund_title_text {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.refund .refund_title image {
  width: 18rpx;
  height: 34rpx;
}
.refund .refund_word {
  margin: 10rpx 0;
  font-size: 26rpx;
  font-family: PingFang SC;
