.con {
  margin-top: 30rpx;
  height: 160rpx;
  padding: 20rpx 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-top: 1rpx solid #f5f5f5;
}
.con .img {
  margin-right: 20rpx;
}
.con .img image {
  width: 160rpx;
  height: 160rpx;
}
.con .right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.con .right .right_msg {
  height: 80rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 40rpx;
}
.con .right .norms {
  -webkit-border-radius: 4rpx;
          border-radius: 4rpx;
  color: #999999;
  font-size: 24rpx;
}
.con .right .num {
  margin-top: 20rpx;
  font-family: PingFang SC;
  color: #999999;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.con .right .num .text1 {
  font-size: 22rpx;
  color: #ff3636;
}
.con .right .num .text2 {
  font-size: 30rpx;
  color: #ff3636;
}
.con .right .num .count {
  font-size: 30rpx;
  color: #999;
}
.con .right .num .count .text4 {
  font: 22rpx;
}
.refund {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.refund .refund_title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
