.status_bar {
  padding: 15rpx 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.status_bar .left_img {
  width: 50rpx;
  height: 70rpx;
}
.status_bar .left_img image {
  margin-top: 19rpx;
  width: 18rpx;
  height: 32rpx;
}
.status_bar .input {
  width: 410rpx;
  height: 70rpx;
  padding: 0 70rpx 0 60rpx;
  line-height: 70rpx;
  height: 70rpx;
  background: #eef1f4;
  -webkit-border-radius: 35rpx;
          border-radius: 35rpx;
  position: relative;
}
.status_bar .input input {
  height: 70rpx !important;
  line-height: 70rpx !important;
}
.status_bar .input .search_img {
  width: 30rpx;
  height: 28rpx;
  position: absolute;
  top: 20rpx;
  left: 25rpx;
}
.status_bar .input .del {
  width: 80rpx;
  height: 70rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.status_bar .input .del image {
  width: 30rpx;
  height: 30rpx;
  margin: 20rpx  0 0 25rpx;
}
.status_bar .searchWord {
  height: 70rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  line-height: 70rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}
.title {
  padding: 0 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 70rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.title .word {
  ont-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}
.title .del {
  width: 50rpx;
  text-align: right;
}
.title .del image {
  width: 32rpx;
  height: 32rpx;
}
.history_list {
  display: -webkit-box;
