.tab {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
}
.tab view {
  width: 50%;
  text-align: center;
}
.tab view text {
  display: inline-block;
}
.tab .current {
  border-bottom: 4rpx solid #05B781;
  color: #05B781;
}
.none {
