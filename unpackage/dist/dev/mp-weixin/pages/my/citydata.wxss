/* 区域选择框 */
.citys {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
}
.citys .city {
  width: 100%;
  height: 700rpx;
  background: #FFFFFF;
  position: absolute;
  left: 0;
  bottom: 0;
}
.citys .city .city_top {
  width: 100%;
  height: 88rpx;
  border-bottom: 2rpx solid #e7e7e7;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.citys .city .city_top .city_sure {
  width: 130rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #D42520;
}
.citys .city .city_top .city_tabs {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.citys .city .city_top .city_tabs view {
  padding: 0 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  position: relative;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.citys .city .city_top .city_tabs view .tip {
  padding: 0;
  width: 56rpx;
  height: 2rpx;
  background: #9C191F;
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.citys .city .city_top .city_tabs .txt {
  color: #333 !important;
  font-weight: 500 !important;
}
.citys .city .srcoll_options {
  height: 600rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.citys .city .srcoll_options scroll-view view {
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
}
.citys .city .srcoll_options scroll-view .txt {
  color: #D42520;
}
.addressModel {
