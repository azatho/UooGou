page {
  background-color: #FFFFFF;
}
.shop {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 30rpx;
}
.shop image {
  width: 100%;
  height: 100%;
}
.shop .img {
  width: 120rpx;
  height: 120rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  margin-right: 20rpx;
}
.shop .shopname {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.shop .pirce {
  font-size: 34rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #FF3636;
}
.comment {
  padding: 30rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.comment image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 0 0 20rpx;
  vertical-align: middle;
}
.appraise {
  width: 691rpx;
  height: 201rpx;
  background: #F5F5F5;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  margin: 30rpx;
  margin-bottom: 0;
  padding: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.appraise textarea {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}
.addimg {
  padding: 30rpx;
}
.addimg image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}
.addimg .cha {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -20rpx;
  right: 20rpx;
}
.sumbit {
  margin: 50rpx 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #FF6351;
  -webkit-border-radius: 45rpx;
          border-radius: 45rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
