.box {
  background-color: white;
  position: relative;
}
.box .boxImg {
  position: absolute;
  left: 0;
  top: 0;
  height: 390rpx;
  width: 100%;
}
.box .boxImg image {
  width: 100%;
  height: 100%;
}
.box .bodyConent {
  position: absolute;
  left: 0;
  top: 250rpx;
  width: 100%;
  padding: 0rpx 30rpx 20rpx;
  min-height: calc(100vh - 150rpx);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-align-content: flex-start;
          align-content: flex-start;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.box .bodyConent .bodyConentItem {
  margin-top: 20rpx;
  width: 335rpx;
  height: 480rpx;
  background: #FFFFFF;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  -webkit-box-shadow: 0 0 2px #b4b8bf;
          box-shadow: 0 0 2px #b4b8bf;
}
.box .bodyConent .bodyConentItem .itemImg {
  padding: 40rpx 25rpx 10rpx;
  height: 234rpx;
}
.box .bodyConent .bodyConentItem .itemImg image {
  width: 100%;
  height: 100%;
}
.box .bodyConent .bodyConentItem .itemText {
  padding: 20rpx;
}
.box .bodyConent .bodyConentItem .itemText .itemTitle {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.box .bodyConent .bodyConentItem .itemText .itemPrice {
  line-height: 50rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FF3F3F;
}
.box .bodyConent .bodyConentItem .itemText .itemPrice image {
  width: 26rpx;
  height: 26rpx;
}
.box .bodyConent .bodyConentItem .itemText .itemNumber {
  height: 22rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}

